          </div>

          <div class="w-full lg:overflow-x-visible">
            <div class="flex max-lg:flex-col group pointer-events-none">
              <div
                tabindex="0"
                class="code-card transform group-hover:opacity-75 group-focus-within:opacity-75 group-focus-within:blur-sm group-hover:blur-sm focus:!blur-none hover:!blur-none filter focus:!opacity-100 hover:!opacity-100 pointer-events-auto h-fit max-lg:max-w-[calc(100vw_-_3rem)] lg:min-w-96 max-lg:[&:not(:first-child)]:-mt-16 lg:[&:not(:first-child)]:-ml-32 transition-all"
              >
                <Pyramid />
              </div>

              <div
                tabindex="0"
                class="code-card transform group-hover:opacity-75 group-focus-within:opacity-75 group-focus-within:blur-sm group-hover:blur-sm focus:!blur-none hover:!blur-none filter focus:!opacity-100 hover:!opacity-100 pointer-events-auto h-fit max-lg:max-w-[calc(100vw_-_3rem)] lg:min-w-96 max-lg:[&:not(:first-child)]:-mt-16 lg:[&:not(:first-child)]:-ml-32 transition-all"
              >
                <Heaven />
              </div>

              <div
                tabindex="0"
                class="code-card transform group-hover:opacity-75 group-focus-within:opacity-75 group-focus-within:blur-sm group-hover:blur-sm focus:!blur-none hover:!blur-none filter focus:!opacity-100 hover:!opacity-100 pointer-events-auto h-fit max-lg:max-w-[calc(100vw_-_3rem)] lg:min-w-96 max-lg:[&:not(:first-child)]:-mt-16 lg:[&:not(:first-child)]:-ml-32 transition-all"
